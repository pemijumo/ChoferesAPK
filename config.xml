<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "mx.cenet.hotelApp"
        version     = "1.0.0"
        versionCode = "1" >

        

        <name>AP Choferes</name>

        <description>
           Aplicacion
        </description>

        <author href="http://yoursite.com" email="you@youremail.com">
            pp
        </author>
        
        <!-- versionCode is optional and Android only -->
		<feature name="http://api.phonegap.com/1.0/network" />
		<access origin="*" subdomains="true" />
		<access origin="*.phonegap.com" /><preference name="phonegap-version" value="cli-6.3.0" />
		
		<content src="index.html" />
		<plugin name="cordova-plugin-whitelist" spec="1" />
		<plugin name="cordova-plugin-geolocation" spec="~3.0.0" />
		<access origin="*" />
		  <allow-intent href="http://*/*" />
		  <allow-intent href="https://*/*" />
		  <allow-intent href="tel:*" />
		  <allow-intent href="sms:*" />
		  <allow-intent href="mailto:*" />
		  <allow-intent href="geo:*" />
		<platform name="android">
		  <allow-intent href="market:*" />
		</platform>
	  <platform name="ios">
		  <allow-intent href="itms:*" />
		  <allow-intent href="itms-apps:*" />
	  </platform>
		
    </widget>
